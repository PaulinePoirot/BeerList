<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond">

    <ImageView
        android:layout_width="350dip"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_BeerList"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:src="@drawable/beertoast" />

    <Button
        android:id="@+id/btn_BeerList"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@color/boutton"
        android:onClick="listActivity"
        android:text="@string/liste"
        android:textColor="@color/fond" />

</RelativeLayout>